# Configuração LOCAL para desenvolvimento (SQLite)
# Use este arquivo para testar localmente no Windows

# Django
DEBUG=True
SECRET_KEY=django-insecure-local-dev-key-change-in-production-12345678
DJANGO_SETTINGS_MODULE=config.settings.local

# Allowed Hosts (local)
ALLOWED_HOSTS=localhost,127.0.0.1

# CORS (permitir frontend local)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database - SQLite (sem necessidade de PostgreSQL)
# O arquivo db.sqlite3 será criado automaticamente

# Celery/Redis - DESABILITADO para teste local
# (Será habilitado na VPS)

# JWT
JWT_SECRET_KEY=jwt-secret-key-local-dev-change-in-production
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=1440

# File Upload
MAX_UPLOAD_SIZE=10485760
MEDIA_ROOT=media/

# Email (console backend para teste)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# APIs Externas (deixe vazio por enquanto)
ASAAS_API_KEY=
ASAAS_SANDBOX=True
EVOLUTION_API_URL=
EVOLUTION_API_KEY=
N8N_WEBHOOK_URL=
CHATGPT_API_KEY=
